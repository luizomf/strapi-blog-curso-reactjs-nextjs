{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "excerpt": {
      "type": "text",
      "maxLength": 250,
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "allowComments": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "tags": {
      "collection": "tag",
      "via": "posts",
      "dominant": true
    },
    "categories": {
      "collection": "category",
      "via": "posts",
      "dominant": true
    },
    "author": {
      "model": "author",
      "via": "posts"
    }
  }
}
